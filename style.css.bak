/** @format */

* {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

body {
  font-family: "Roboto", sans-serif;
  background: #0648fe;
  color: #fff;
}

.container {
  max-width: 1300px;
  margin: auto;
  padding: 0 1rem;
}

.row {
  display: flex;
  justify-content: space-between;
  grid-gap: 0.5rem;
}

.column{
    display: flex;
    justify-content: space-between;
}

.item {
  min-width: 100px;
  border: 5px solid #fff;
  padding: 10px;
  border-radius: 10px;
  width: fit-content;
  height: 75px;
}

.corner-item {
  min-width: 150px;
  min-height: 150px;
}
